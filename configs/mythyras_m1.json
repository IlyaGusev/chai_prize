{
    "trainer": {
        "evaluation_strategy": "steps",
        "per_device_train_batch_size": 2,
        "per_device_eval_batch_size": 1,
        "gradient_accumulation_steps": 32,
        "eval_steps": 5,
        "save_steps": 5,
        "logging_steps": 1,
        "learning_rate": 0.0002,
        "num_train_epochs": 3,
        "lr_scheduler_type": "cosine",
        "warmup_steps": 5,
        "fp16": false,
        "bf16": true,
        "torch_compile": false,
        "optim": "adamw_torch"
    },
    "lora": {
        "r": 4,
        "lora_alpha": 16,
        "lora_dropout": 0.05,
        "bias": "none",
        "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj", "up_proj", "down_proj", "gate_proj", "lm_head"],
        "task_type": "CAUSAL_LM"
    },
    "load_in_8bit": true,
    "only_target_loss": true,
    "mode": "chat",
    "add_global_eos": false,
    "templates_path": "prompts/prompt_v3.json",
    "model_name": "models/mythalion-13b",
    "model_type": "causal",
    "max_tokens_count": 2560
}
